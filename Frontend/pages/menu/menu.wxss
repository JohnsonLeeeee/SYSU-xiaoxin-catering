/**menu.wxss**/
.container{
  position:absolute;
  width:100%;
  height:100%;
  background:#fff;
}

.aside{
  float:left;
  height:100%;
  width:75px;
  padding-bottom:2%;
  text-align:center;
  overflow: scroll;
  background:#f2f2f2;
}

.aside::-webkit-scrollbar{
  width:2%;
}

.aside .menu{
  height:40px;
  color:#333;
  font-size:14px;
  line-height:40px;
  border-top:1px solid #eee;
  margin-bottom:20px;
}

.aside .menu.active{
  background:#fff;
  border-left-style:solid;
  border-left-color:#ffbe00;
  border-left-width:5px;
}

.item-content{
  float:left;
  width:calc(100% - 100px);
  height:100%;
}

.item-content .box{
  height:calc(100% - 10px);
  padding:10px 0 0 10px;
  overflow: scroll;
}

.item-content .box.active{
  padding-bottom:80px;
}

.item-content .box::-webkit-scrollbar{
  width:0;
}

.item-content .box .item{
  height:80px;
  padding:10px 0 10px 10px;
  margin-bottom:1px;
  background:#fff;
}

.item-content .box .item image{
  display:block;
  float:left;
  height:90px;
  width:80px;
  margin-right:10px;
}

.item-content .box .item text{
  display:block;
  font-size:16px;
}

.item-content .box .item .title{
  margin-bottom:5px;
  font-weight:bolder;
}

.item-content .box .item .price{
  color:red;
  font-size:14px;
  margin-bottom:5px;
}

.item-content .box .item .btn{
  display:block;
  float:right;
  margin:-10px 10px 0 0;
  padding:5px 10px;
  font-size:10px;
  color:#fff;
  background:#ffbe00;
  border-radius:20px;
}

.item-content .box .item .btn.active{
  background:#ccc;
}

.bottom-bar{
    display:flex;
    position: fixed;
    bottom:0;
    width:100%;
    height:80px;
    line-height:80px;
    background:#fff;
    box-shadow: 0 -5px 10px #ccc;
}

.bottom-bar.hidden{
  display:none;
}

.bottom-bar>view{
    flex-grow: 1;
}

.bottom-bar .count{
    padding-left:10px;
}

.bottom-bar .num{
    margin-right:10px;
    font-size:18px;
    font-weight:bolder;
    color:red;
}

.bottom-bar .btn{
    height:40px;
    width:50px;
    margin:20px 10px 0 0;
    color:#fff;
    line-height:40px;
    text-align:center;
    font-size:16px;
    background:orange;
}

