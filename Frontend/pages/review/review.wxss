/* pages/review/review.wxss */
.title {
  font-size: 24px;
  position:absolute; top:0; left:0; width:200px; height:100%;
}
.user {
  height: 100%;
  font-size: 16px;
  text-align: center;
  color: black;
  margin-top: 0;
  padding-top: 0;
}
.comment {
  font-size: 16px;
  padding-left: 10px;
}
.icon {
  height: 60px;
  width: 60px;
  margin-right: 10px;
  border-radius:50%;
}
.usrbox {
  display: flex;
  align-items: center;
  padding: 0px;
  margin: 5px;
  width: 100%;
  height: 100%;
  /* border: hidden; */
}


.input {
  height: 100px;
  margin-top: 10px;
  border: double #aee8ff 10px;
  margin-right: 20px;
}
view {
  margin: 20px;
}
.review {
  /* border: hidden; */
  margin-bottom: 5px;
  margin-top: 0px;
  padding: 5px;
  border: black,solid,5px;
}

.submit {
  margin-top: 10px;
  margin-right: 20px;
  background: #FEAB00;
}

.write {
  margin: 0px;
  background: #ffffff;
  box-shadow: 0 -5px 10px #ccc;
  bottom: 0;
  position: fixed;
  width: 100%;
  padding: 10px;
}
.ins {
  font-size: 22px;
  margin: 10px;
}
.stars{
    background:url("https://gitee.com/zhuyz3/images/raw/master/star-dark.jpg");
    margin: 5px;
    width: 34rpx;
    height: 34rpx;
    background-size: 34rpx 34rpx;
    transition: 600ms;
}
.on{
    background:url("https://gitee.com/zhuyz3/images/raw/master/star.jpg");
    margin: 5px;
    width: 34rpx;
    height: 34rpx;
    background-size: 34rpx 34rpx;
    transition: 1s;
    transform: scale(1,1)
}

.comment1-description{
  padding:-270px;
  display:flex;
  flex-direction:row;
  height: 22px;
  margin: 0px;
  float: right;
}

.usrbox .score{
  /* text-align: left; */
  font-size: 12pt;
  color: grey;
  padding:-70px;
  display:flex;
  flex-direction:row;
  height: 100%;
  margin-top: 60px;
