/**index.wxss**/
.container{
  position:absolute;
  width:100%;
  height:100%;
  background:#eee;
}
.item-content{
  float:left;
  width:calc(100% - 10px);
  height:100%;
}
.item-content .box{
  height:calc(100% - 10px);
  padding:10px 0 75px 10px;
  overflow: scroll;
}
.item-content .box::-webkit-scrollbar{
  width:0;
}
.item-content .box .item{
  height:50px;
  padding:10px 0 10px 10px;
  margin-bottom:10px;
  background:#fff;
}
.item-content .box .item image{
  display:block;
  float:left;
  height:80px;
  width:90px;
  margin-right:10px;
}
.item-content .box .item text{
  display:block;
  font-size:16px;
}
.item-content .box .item .title{
  margin-bottom:5px;
  font-weight:bolder;
}
.item-content .box .item .price{
  font-size:18px;
  margin-bottom:5px;
}
.item-content .box .item .opera{
  margin-top:-30px;
  padding-right:10px;
  text-align:right;
}
.item-content .box .item .opera text{
  display:inline-block;
  font-size:14px;
}
.item-content .box .opera .btn{
  display:inline-block;
  height:20px;
  width:20px;
  line-height:20px;
  text-align:center;
  color:#fff;
  font-weight:bolder;
  background:#FEAB00;
  border-radius:5px;
  margin-bottom:5px;
}
.item-content .box .opera .num{
  padding:2px 15px;
  margin:0 10px;
  border:1px solid #ccc;
}
.bottom-bar{
    display:flex;
    position: fixed;
    bottom:0;
    width:100%;
    height:50px;
    line-height:50px;
    background:#fff;
    box-shadow: 0 -5px 10px #ccc;
    padding:0 0 1px 1px;
}
.bottom-bar.hidden{
  display:none;
}
.bottom-bar>view{
    flex-grow: 1;
}

.bottom-bar .total_price{
  color: grey;
  font-size: 14px;
  width:calc(100% - 120px);
}

.bottom-bar .btn{
    height:50px;
    width:120px;
    margin:0 0 10px 0;
    color:#fff;
    /* line-height:40px; */
    text-align:center;
    font-size:16px;
    align-items:flex-end;
    background:#FEAB00;
    border-radius:0，0，20px，20px;
}

.bottom-bar .btn .pay{
  margin:0 0 10px 0;
  font-size: 16px;
}